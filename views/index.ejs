<!-- views/index.ejs -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Tiny5&display=swap" rel="stylesheet">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <div class="container">
            <h1 class="frontpage">Hi Im Paul Andrew Consunji <br>
                and this is my Portfolio</h1>
                <div class="piano">
                    <div class="key" data-note="C">A</div>
                    <div class="key" data-note="D">B</div>
                    <div class="key" data-note="E">C</div>
                    <div class="key" data-note="F">D</div>
                    <div class="key" data-note="G">E</div>
                    <div class="key" data-note="A">F</div>
                    <div class="key" data-note="B">G</div>
                </div>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
<script>
    // script.js
document.addEventListener('DOMContentLoaded', () => {
    const keys = document.querySelectorAll('.key');
    
    // Create audio elements for each note
    const notes = {
        C: new Audio('notes/C.wav'),
        D: new Audio('notes/D.wav'),
        E: new Audio('notes/E.wav'),
        F: new Audio('notes/F.wav'),
        G: new Audio('notes/G.wav'),
        A: new Audio('notes/A.wav'),
        B: new Audio('notes/B.wav')
    };

    keys.forEach(key => {
        key.addEventListener('click', () => {
            const note = key.dataset.note;
            if (notes[note]) {
                notes[note].currentTime = 0; // Rewind to the start
                notes[note].play();
            }
            key.classList.add('bounce');
            setTimeout(() => {
                key.classList.remove('bounce');
            }, 500);
        });
    });
});

</script>
</html>
